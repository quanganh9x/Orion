#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const http = require('http');
const https = require('https');
const fs = require('fs');

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '8000');
app.set('port', port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);
if (process.env.DEPLOY_SECURESERVER) {
    const options = {
        cert: fs.readFileSync('/home/anhdqd00646/.ssl/fullchain.pem'),
        key: fs.readFileSync('/home/anhdqd00646/.ssl/privkey.pem'),
        ca: fs.readFileSync('/home/anhdqd00646/.ssl/chain.pem')
    };
    const secureServer = https.createServer(options, app);
    secureServer.listen(8001);
}
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}